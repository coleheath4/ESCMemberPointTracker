<div class="container">
    <div class="event edit">
        <% if !flash.alert.nil?%>
            <h4 class='alert'><%= flash.alert %></h4>
        <% end %>

        <h2>Update Event</h2>

        <%= form_for(@reward) do |r|%>
            <%= render(:partial => 'form', :locals => {:r => r})%>

            <%= r.submit('Update Event', :class => "btn btn-secondary") %>
        <% end %>
    </div>    
</div>

