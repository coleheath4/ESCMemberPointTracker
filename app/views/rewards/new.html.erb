<div class="container">
    <div class="event new">
        <% if !flash.alert.nil?%>
            <h4><%= flash.alert %></h4>
        <% end %>

        <h2>Create New Event</h2>

        <%= form_for(@reward, :url => rewards_path, :method => "post") do |r|%>
            <%= render(:partial => 'form', :locals => {:r => r})%>

            <div class="form-button">
                <%= r.submit('Create Event', :class => 'btn btn-secondary') %>
            </div>
        <% end %>
    </div>
</div>

