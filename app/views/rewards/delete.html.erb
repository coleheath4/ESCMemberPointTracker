<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
        <%= link_to("Rewards", rewards_path) %>
    </li>
    <li class="breadcrumb-item">
        <%= link_to("Details", reward_path(@reward), :class => 'breadcrumb-item') %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Delete</li>
  </ol>
</nav>

<div class="container">
  <div class="users delete">
    <h2>Delete Reward</h2>

    <%= form_for(@reward, :method => 'delete') do |r| %>

      <p>Are you sure you want to permanently delete the reward?</p>

      <p class="reference-name"><%= r.object.name%></p>

      <%= r.submit('Delete Reward', :class => "btn btn-danger") %>

    <% end %>
  </div>  
</div>

