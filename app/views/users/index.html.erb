<%= stylesheet_link_tag 'users' %>
<% @student_title = "All Students" %>

<!-- Image and text -->
<nav class="navbar navbar-expand-lg navbar-light bg-nav">
  <a class="navbar-brand" href="#">
    <i class="far fa-thumbs-up" class="d-inline-block align-top"></i>
    <%# <i class="fas fa-power-off" class="d-inline-block align-top" alt=""></i> %>
    ESC-Point Tracker
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to("Me", dashboard_path, :class => 'nav-link') %>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Users</a>
      </li>
      <li class="nav-item">
        <%= link_to("Rewards", rewards_path, :class => 'nav-link') %>
      </li>
      <li class="nav-item">
        <%= link_to('Logout', logout_path, :class => 'nav-link')%>
      </li>
    </ul>
  </div>
</nav>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Users</li>
  </ol>
</nav>

<div class="container">
  <div class="books index">
    <h2>Members</h2>

    <% if !flash[:notice].nil? %>
    <h4><%= flash[:notice] %></h4>
    <% end %>

    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Points</th>
            <th scope="col">Info</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.points %></td>
            <td class="actions">
              <%= link_to("Details", user_path(user), :class => 'action show') %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <button type="button" class="btn btn-secondary" onclick="location.href='/users.csv'">Export</button>
  </div>
</div>

<div class="text-center">
  <button type="button" class="action delete btn btn-danger" onclick="location.href='<%=delete_all_users_warning_path()%>'">Clear All Members</button>
</div>
 

<script src="https://kit.fontawesome.com/08f62176a8.js" crossorigin="anonymous"></script>
