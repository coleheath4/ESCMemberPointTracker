<div class="container">
  <div class="row">
    <div class="users show">
      <h3>Event History</h3>
      <%= render(partial: 'attended_events', :locals => {:user => @user, :return_path => user_path(@user.id), :return_path_name => "User Details - #{@user.first_name}"}) %>
    
    </div>    
  </div>  
</div>

