<div class="container">
  <div class="row">
    <h2>Member Details</h2>
  </div>
  <div class="row">
    <div class="col-md-4">
        <%= image_tag("profile.png", :class => "img-fluid profile-picture rounded-circle") %>
    </div>
    <div class="col-md-8">
      <table summary="User detail view">
        <tr>
          <th>Username</th>
          <td><%= @user.username %></td>
        </tr>
        <tr>
          <th>First Name</th>
          <td><%= @user.first_name %></td>
        </tr>
        <tr>
          <th>Last Name</th>
          <td><%= @user.last_name %></td>
        </tr>
        <tr>
          <th>Email</th>
        <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>Admin</th>
          <td><%= @user.is_admin %></td>
        </tr>
        <tr>
          <th>Points</th>
          <td><%= @user.points %></td>
        </tr>
      </table>

      <%= link_to("Edit User", edit_user_path(@user), :class => 'action edit btn btn-secondary') %>

      <%= link_to("Delete User", delete_user_path(@user), :class => 'action delete btn btn-danger') %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">

    </div>
  </div>

</div>

