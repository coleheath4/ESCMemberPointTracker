<%= link_to("<< Back to List", users_path, :class => 'back-link') %>

<div class="users delete">
  <h2>Delete User</h2>

  <%= form_for(@user, :method => 'delete') do |u| %>

    <p>Are you sure you want to permanently delete this user?</p>

    <p class="reference-name"><%= u.object.username %></p>

    <div class="form-buttons">
      <%= u.submit("Delete User") %>
    </div>

  <% end %>
</div>